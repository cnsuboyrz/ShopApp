@model MainCategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Main Categories</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/maincategories/create">Add Main Category</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td>Name</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.MainCategories.Count>0)
                {
                       @foreach (var item in Model.MainCategories)
                        {
                            <tr>
                                <td>@item.MainCategoryId</td>
                                <td>@item.Name</td>  
                                <td>
                                    <a href="/admin/maincategories/@item.MainCategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                    
                                    <form action="/admin/deletemaincategory" method="POST" style="display: inline;">
                                        <input type="hidden" name="maincategoryId" value="@item.MainCategoryId">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Main Categories</h3>
                    </div>
                }

             
            </tbody>
        </table>
    </div>
</div>